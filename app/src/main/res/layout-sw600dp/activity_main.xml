<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".RecipeDetailsMainActivity">

    <!-- The static MasterListFragment -->
    <fragment
        android:id="@+id/master_list_fragment"
        android:name="com.example.android.bakingapp.RecipeDetails"
        android:layout_width="@dimen/activity_main_fragment_width"
        android:layout_height="match_parent" />

    <!-- A small divider -->
    <View
        android:layout_width="@dimen/activity_main_view_width"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>

</LinearLayout>